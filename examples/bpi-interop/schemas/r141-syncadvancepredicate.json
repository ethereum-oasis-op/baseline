{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/eea-oasis/baseline/blob/main/examples/bpi-interop/schemas/r141-syncadvancepredicate.json",
  "$comment": {
    "term": "r141-syncadvancepredicate",
    "@id": "https://github.com/eea-oasis/baseline#r141-syncadvancepredicate"
  },
  "title": "syncadvancepredicate",
  "description": "BPI State Synchronization and Advancement Predicate",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "uuid"
    },
    "originatorBpiSubject": {
      "type": "string",
      "description": "DID of the originator of the Bank Data Object (ACME)"
    },
    "createDate": {
      "type": "string",
      "description": "Date the Bank Data Object was created"
    },
    "updateDate": {
      "type": "string",
      "description": "Date the Bank Data Object was last updated"
    },
    "description": {
      "type": "string",
      "description": "Description of the Bank Data Object"
    },
    "syncPredicate": {
      "type": "object",
      "properties": {
        "predicate": {
          "type": "string",
          "description": "Description of the Synchronization Statement: Verify the zk-proof of correct banking data by generating the root hash of the bankStateObject from Bank Data system and verifying that with this public input the proof verifies to true."
        },
        "input": {
          "description": "Array of public inputs required for the predicate zk proof(s)",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "participantsSourceWorkgroup": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string"
                    },
                    "idType": {
                      "type": "string"
                    },
                    "Participant": {
                      "type": "string"
                    }
                  },
                  "required": ["id", "idType", "Participant"]
                }
              },
              "publicProof": {
                "type": "object",
                "properties": {
                  "requesterKey": {
                    "type": "string"
                  },
                  "MerkleRootBankStateObject": {
                    "type": "string"
                  },
                  "zkProof": {
                    "type": "string"
                  },
                  "verificationKey": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  }
                },
                "required": ["requesterKey", "MerkleRootBankStateObject", "zkProof", "verificationKey"]
              }
            },
            "required": ["participantsSourceWorkgroup", "publicProof"]
          }
        },
        "output": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "bankSignedBankStateObjectMerkleRoot": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "bankAuditorZKWitness": {
                "$ref": "#/definitions/IZKWitnessWorkstep2"
              }
            },
            "required": ["bankSignedBankStateObjectMerkleRoot", "bankAuditorZKWitness"]
          }
        }
      },
      "required": ["predicate", "input", "output"]
    },
    "advancePredicate": {
      "type": "object",
      "properties": {
        "predicate": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "rule": {
                "type": "string"
              },
              "result": {
                "type": "string"
              }
            },
            "required": ["rule", "result"]
          }
        },
        "input": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "participantsTargetWorkgroup": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string"
                    },
                    "idType": {
                      "type": "string"
                    },
                    "Participant": {
                      "type": "string"
                    }
                  },
                  "required": ["id", "idType", "Participant"]
                }
              },
              "publicProof": {
                "type": "object",
                "properties": {
                  "bankSignedBankStateObjectMerkleRoot": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  },
                  "bankAuditorZKWitness": {
                    "$ref": "#/definitions/IZKWitnessWorkstep2"
                  }
                },
                "required": ["bankSignedBankStateObjectMerkleRoot", "bankAuditorZKWitness"]
              }
            },
            "required": ["participantsTargetWorkgroup", "publicProof"]
          }
        },
        "output": {
          "type": "object",
          "properties": {
            "public": {
              "type": "object",
              "properties": {
                "input": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "participantsTargetWorkgroup": {
                        "type": "array",
                        "items": {
                          "type": "object",
                          "properties": {
                            "id": {
                              "type": "string"
                            },
                            "idType": {
                              "type": "string"
                            },
                            "Participant": {
                              "type": "string"
                            }
                          },
                          "required": ["id", "idType", "Participant"]
                        }
                      },
                      "publicProof": {
                        "type": "object",
                        "properties": {
                          "bankSignedBankStateObjectMerkleRoot": {
                            "type": "array",
                            "items": {
                              "type": "string"
                            }
                          },
                          "bankAuditorZKWitness": {
                            "$ref": "#/definitions/IZKWitnessWorkstep2"
                          }
                        },
                        "required": ["bankSignedBankStateObjectMerkleRoot", "bankAuditorZKWitness"]
                      },
                      "signatureRequestor": {
                        "type": "array",
                        "items": {
                          "type": "string"
                        }
                      }
                    },
                    "required": ["participantsTargetWorkgroup", "publicProof", "signatureRequestor"]
                  }
                }
              },
              "required": ["input"]
            }
          },
          "required": ["public"]
        }
      },
      "required": ["predicate", "input", "output"]
    },
    "bankStateObject": {
      "$ref": "https://github.com/eea-oasis/baseline/blob/main/examples/bpi-interop/schemas/r140-bankstateobject.json"
    },
    "environment": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/Environment"
      }
    },
    "proverSystem": {
      "type": "string",
      "description": "Groth16 | Plonk"
    },
    "crs": {
      "type": "string",
      "description": "Common Reference String for the Trusted Set Up of the Prover System"
    },
    "orignatorSignature": {
      "title": "ECDSA Digital Signature with Public Key",
      "description": "ECDSA Digital Signature with Public Key",
      "type": "object",
      "properties": {
        "r": {
          "description": "The first signature value",
          "type": "string"
        },
        "s": {
          "description": "The second signature value",
          "type": "string"
        },
        "hash": {
          "description": "The hash of the message that was signed",
          "type": "string"
        },
        "public_key": {
          "description": "The public key that corresponds to the signature",
          "type": "string"
        }
      }
    }
  },
  "definitions": {
    "BankStateObject": {
      "$ref": "https://github.com/eea-oasis/baseline/blob/main/examples/bpi-interop/schemas/r140-bankstateobject.json"
    },
    "Environment": {
      "type": "object",
      "properties": {
        "briId": {
          "type": "string"
        },
        "workgroupId": {
          "type": "string"
        },
        "workflowId": {
          "type": "string"
        },
        "workstepId": {
          "type": "string"
        }
      }
    },
    "IZKWitnessWorkstep2": {
      "type": "object",
      "properties": {
        "proof": {
          "type": "string"
        },
        "publicInput": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "verificationKey": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "required": ["proof", "publicInput", "verificationKey"]
    }
  }
}
    
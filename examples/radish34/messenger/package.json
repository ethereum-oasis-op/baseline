{
  "name": "radish34-messenger-service",
  "version": "1.0.0",
  "description": "REST Based API microservice for sending and receiving structured JSON messages delivered via Whisper",
  "contributors": [
    "Brian Chamberlain <breakpointer>",
    "Sam Stokes <bitwiseguy>"
  ],
  "license": "SEE LICENSE in root/license.md",
  "jest": {
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/config/"
    ],
    "collectCoverageFrom": [
      "**/*.js"
    ],
    "coverageReporters": [
      "text"
    ],
    "coveragePathIgnorePatterns": [
      "node_modules",
      "coverage",
      "config",
      "docs"
    ],
    "verbose": true
  },
  "scripts": {
    "build": "bin/build-image.sh",
    "deploy:up": "docker-compose -f ../docker-compose.yml up --build geth-node mongo-buyer redis-buyer",
    "deploy:down": "docker-compose down",
    "docs": "npx apidoc -i src/ -o docs/",
    "lint:fix": "eslint --fix .",
    "lint": "eslint .",
    "prettify": "prettier --write **/*.js",
    "start": "node ./src/index.js",
    "start:dev": "nodemon ./src/index.js",
    "start:test": "nodemon ./src/index.js",
    "test": "NODE_ENV=test jest --runInBand --forceExit --coverage"
  },
  "dependencies": {
    "@baseline-protocol/messaging": "^0.0.2",
    "axios": "^0.19.0",
    "body-parser": "^1.19.0",
    "bull": "^3.12.1",
    "bull-board": "^0.6.0",
    "colors": "^1.4.0",
    "express": "^4.17.1",
    "mongoose": "^5.9.5",
    "radish34-logger": "file:../logger",
    "web3": "^1.2.6"
  },
  "devDependencies": {
    "apidoc": "^0.20.1",
    "eslint": "^6.7.2",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-plugin-import": "^2.19.1",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "lint-staged": "^10.0.7",
    "mongodb": "^3.5.5",
    "nodemon": "^2.0.2",
    "prettier": "^1.19.1",
    "supertest": "^4.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "/messenger/src/**/*.js,": [
      "eslint --fix"
    ]
  }
}

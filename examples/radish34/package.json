{
  "name": "radish34",
  "version": "1.0.0",
  "description": "Codebase for Radish34 application - procurement use case for the Baseline protocol",
  "contributors": [
    "A.J. May <aj-may>",
    "Brian Chamberlain <breakpointer>",
    "Chaitanya Konda <ChaitanyaKonda>",
    "Claudia Baik <clacla826>",
    "Duncan Westland <Westlad>",
    "Kartheek Solipuram <skarred14>",
    "Patrick Macom <pmacom>",
    "Sam Stokes <bitwiseguy>",
    "Wenxing Wang <wenxing-wang-ey>"
  ],
  "license": "SEE LICENSE in license.md",
  "main": "index.js",
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "<rootDir>/__tests__/**"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/__tests__/postman"
    ]
  },
  "scripts": {
    "await-stack": "./ops/await_stack.sh",
    "build": "npm run build:install && build:contracts",
    "build:install": "./ops/build.sh",
    "build:contracts": "npm run build --prefix contracts",
    "build:docs": "./ops/build_docs.sh",
    "clean": "./ops/clean_npm.sh",
    "compose:up": "docker-compose -f docker-compose.yml -f config/docker-compose.tmp.yml up",
    "compose:up:all": "docker-compose -f docker-compose.yml -f config/docker-compose.tmp.yml up -d",
    "compose:down": "docker-compose -f docker-compose.yml -f config/docker-compose.tmp.yml down",
    "compose:restart": "docker-compose -f docker-compose.yml -f config/docker-compose.tmp.yml restart",
    "compose:run": "docker-compose -f docker-compose.yml -f config/docker-compose.tmp.yml run",
    "start": "npm run start:dev",
    "start:dev": "./ops/start.sh dev",
    "start:prod": "./ops/start.sh prod",
    "stop": "./ops/stop.sh",
    "restart": "npm run stop && npm run start",
    "destroy": "./ops/destroy.sh",
    "deploy": "./ops/deploy.sh",
    "docs:build": "echo 'Warning: use npm run build:docs instead' && npm run build:docs",
    "dockerize": "./ops/dockerize.sh",
    "install-config": "mkdir -p ./config && cp -r ./deploy/src/config/backups/* ./config && cp -r ./deploy/src/config/keystore ./config",
    "lint": "solhint \"contracts/**/*.sol\"",
    "zk-circuits": "rm -rf ./zkp/output && mkdir -p ./zkp/output && npm run setup-circuits",
    "setup-circuits": "./ops/setup_circuits.sh",
    "system-check": "./ops/system_check.sh",
    "test": "npm run await-stack && NODE_ENV=test jest --verbose --runInBand --forceExit",
    "test:watch": "jest --watchAll --runInBand"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/EYBlockchain/radish-34.git"
  },
  "bugs": {
    "url": "https://github.com/EYBlockchain/radish-34/issues"
  },
  "homepage": "https://github.com/EYBlockchain/radish-34#readme",
  "devDependencies": {
    "@babel/preset-env": "^7.9.0",
    "apidoc": "^0.20.1",
    "husky": "^4.2.3",
    "jest": "^24.8.0",
    "jsdoc": "^3.6.3",
    "minimist": ">=0.2.1",
    "mongodb": "^3.5.5",
    "solhint": "2.1.0",
    "solidity-docgen": "^0.4.1",
    "supertest": "^4.0.2"
  }
}
